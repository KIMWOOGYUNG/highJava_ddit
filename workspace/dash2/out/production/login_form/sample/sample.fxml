<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
    <children>
        <Pane prefHeight="350.0" prefWidth="450.0" style="-fx-background-color: #f2c23f;">
            <children>
                <Label layoutX="51.0" layoutY="24.0" prefHeight="53.0" prefWidth="254.0" styleClass="CSS.css" text="Welcome">
                    <font>
                        <Font size="36.0" />
                    </font>
                </Label>
                <Label layoutX="51.0" layoutY="116.0" text="User name">
               <font>
                  <Font size="18.0" />
               </font></Label>
                <Label layoutX="51.0" layoutY="171.0" text="Password">
               <font>
                  <Font size="18.0" />
               </font></Label>
                <TextField fx:id="user_name" layoutX="160.0" layoutY="110.0" prefHeight="25.0" prefWidth="215.0" style="-fx-background-color: #e3e2de;">
               <font>
                  <Font size="18.0" />
               </font></TextField>
                <PasswordField fx:id="password" layoutX="160.0" layoutY="165.0" prefHeight="25.0" prefWidth="215.0" style="-fx-background-color: #e3e2de;">
               <font>
                  <Font size="18.0" />
               </font></PasswordField>
                <Button fx:id="login_button" layoutX="160.0" layoutY="261.0" mnemonicParsing="false" onAction="#buttonAction" prefHeight="41.0" prefWidth="100.0" style="-fx-background-color: #f5d787;" text="Log in" />
            <Label fx:id="error" alignment="CENTER" layoutX="40.0" layoutY="212.0" prefHeight="27.0" prefWidth="370.0">
               <font>
                  <Font size="18.0" />
               </font></Label>
            <Button fx:id="signin" layoutX="275.0" layoutY="261.0" mnemonicParsing="false" onAction="#singInAction" prefHeight="41.0" prefWidth="100.0" style="-fx-background-color: #f5d787;" text="Sign in" />
            <Button fx:id="close" layoutX="408.0" layoutY="24.0" mnemonicParsing="false" onAction="#closeWindow" style="-fx-background-color: #f5d787;" text="X" textAlignment="CENTER" />
            </children>
        </Pane>
    </children>
</GridPane>
